@model IEnumerable<Biblioteka.Models.Knjige>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    @Html.ActionLink("Nova knjiga", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Izdanje
        </th>
        <th>
            Naslov
        </th>
        <th>
            Godina originala
        </th>
        <th>
            Broj na stanju
        </th>
        <th>
            Broj izdatih
        </th>
        <th>
            Ime Autora
        </th>
        <th>
            Kategorija
        </th>
        <th>Slika</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*<div class="form-group">
                        @Html.LabelFor(model => model.IzdanjaKnjiga.Id, new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.IzdanjaKnjiga.Id, new SelectList(ViewBag.IzdanjaKnjige, "IzdanjeId", "IzdavackaKucaIGodina"), "Izaberite izdanje knjige", new { @class = "form-control", id = "ddlIzdanjaKnjiga" })
                        @Html.ValidationMessageFor(model => model.IzdanjaKnjiga.Id, "", new { @class = "text-danger" })
                    </div>*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naslov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GodinaOriginala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojNaStanju)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojIzdatih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autori.Ime)
                @Html.DisplayFor(modelItem => item.Autori.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategorije.Naziv)
            </td>
            <td>
                @*<div class="form-group">
                        <img id="slikaKorica" src="#" alt="Slika korica" />
                    </div>*@
            </td>
            <td>
                @Html.ActionLink("Izmjeni", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
                @Html.ActionLink("Izbriši", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

