@model Biblioteka.Models.IzdanjaKnjiga

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Novo izdanje</h2>
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @*@Html.LabelFor(model => model.KnjigeId, "KnjigeId", htmlAttributes: new { @class = "control-label col-md-2" })*@
        <label for="KnjigeId">Knjige</label>
        <div class="col-md-10">
            @*@Html.DropDownList("KnjigeId", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.DropDownListFor(model => model.KnjigeId, ViewBag.KnjigeId as SelectList, "Izaberite knjigu", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KnjigeId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="IzdavackaKucaId">Izdavacka kuca</label>
        <div class="col-md-10">
            @*@Html.DropDownList("IzdavackaKucaId", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.DropDownListFor(model => model.IzdavackaKucaId, ViewBag.IzdavackaKucaId as SelectList, "Izaberite izdavacku kucu", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IzdavackaKucaId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SlikaKorica, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(model => model.SlikaKorica, "", new { @class = "text-danger" })
            <input type="file" id="FileSlikaKorica" name="FileSlikaKorica" required />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Godina, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Godina, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Godina, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="BrojNaStanju">Broj na stanju</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.BrojNaStanju, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BrojNaStanju, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="BrojIzdatih">Broj izdatih</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.BrojIzdatih, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BrojIzdatih, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Napravi" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Nazad na listu", "Index")
</div>
